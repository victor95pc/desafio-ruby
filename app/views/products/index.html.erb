<div class="products">
  <% @products.to_a.in_groups_of(4, false).each do |products_group| %>
    <div class="row">
      <% ProductDecorator.decorate_collection(products_group).each do |product| %>
        <div class="col-sm-3 product">
          <%= link_to product.link, target: '_blank' do %>
            <%= image_tag product.image_url, class: 'product-image img-responsive center-block' %>

            <h5 class="product-name">
              <%= product.name %>
            </h5>

            <div class="price center-block">
              <span><%= product.price_formated %></span>
              <span><b><%= product.installments_info %></b></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= paginate @products, theme: 'bootstrap' %>
</div>
